{
  "name": "wiki-challenge",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:client && npm run build:server && node ./build/server.js",
    "start:dev": "concurrently 'npm run build:server:dev' 'nodemon ./build/server.js'",
    "start:dev:client": "webpack-dev-server --open",
    "build:client": "webpack",
    "build:server": "babel ./app -d build --ignore '**/*.test.js'",
    "build:server:dev": "babel ./app -d build --ignore '**/*.test.js' --watch",
    "test": "jest --coverage && standard",
    "test:watch": "jest --watch",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "author": "Misa ogura",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.17.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "concurrently": "^3.5.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "history": "^4.7.2",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "standard": "^10.0.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/testConfig/shim.js",
      "<rootDir>/testConfig/setupTest.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/testConfig/"
    ]
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  }
}
